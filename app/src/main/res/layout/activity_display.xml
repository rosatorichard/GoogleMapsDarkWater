<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.batchmates.android.darkwaters.view.thirdactivity.DisplayActivity">

    <ImageView
        android:id="@+id/imageBackground"
        android:background="@drawable/treasure_chest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/placeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/placePrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/placeStars"
        android:layout_width="wrap_content"
        android:layout_height="30sp" />

    <TextView
        android:id="@+id/placeAdress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/placePhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
